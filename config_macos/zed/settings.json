{
  "_documentation": "https://zed.dev/docs/configuring-zed",
  "buffer_font_fallbacks": ["Zed Plex Mono"],
  "buffer_font_family": "Hack Nerd Font Mono",
  "base_keymap": "JetBrains",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "journal": {
    "hour_format": "hour24"
  },
  "auto_update": false,
  "theme": {
    "mode": "system",
    "dark": "Tokyo Night Storm",
    "light": "Tokyo Night Light"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "languages": {
    "JavaScript": {
      "format_on_save": "off"
    },
    "CSS": {
      "format_on_save": "off"
    },
    "HTML": {
      "format_on_save": "on"
    }
  }
}
